{
    "compilerOptions": {
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./build/dist/",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noResolve": false,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "lib": ["es2015", "es2017", "es6", "dom", "dom.iterable"]
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "include": ["src", "src/**/*.ts"],
    "exclude": ["./node_modules/**/*", "**/__tests__/*"]
}
